        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_semibold</item>
    </style>

    <style name="txt_gray_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAppearance">@style/TextAppearance_bold</item>
    </style>

    <style name="EdittextBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance_open_sans_semibold</item>
        <item name="android:theme">@style/EditTextStyle</item>
    </style>
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <!--before entered text underline-->
        <item name="colorControlNormal">@color/brown</item>
        <!--after entered text underline-->
        <item name="android:textAppearance">@style/TextAppearance_bold</item>
        <item name="colorControlActivated">@color/app_color</item>
        <item name="colorControlHighlight">@color/app_color</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAppearance">@style/TextAppearance_bold</item>
        <item name="android:textColorHint">@color/red</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/round_btn_corner</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:minWidth">@dimen/_150sdp</item>
        <item name="android:elevation">@dimen/_4sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AlertDialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/app_color</item>
        <item name="android:colorAccent">@color/app_color</item>
        <item name="android:textColorPrimary">@color/app_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogSlideUpAnimation</item>-->
    </style>
    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
