<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/cardview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="@dimen/_5sdp"-->
<!--            card_view:cardBackgroundColor="@color/white"-->
<!--            card_view:cardCornerRadius="@dimen/_5sdp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_initial"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_gray"
                    android:gravity="center"

                    android:text="A"
                    android:textAppearance="@style/TextAppearance_open_sans_semibold"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_sender"
                        android:textAppearance="@style/TextAppearance_bold"
                        style="@style/txt_black_medium"
                        android:layout_gravity="start"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/txt_bref"
                        style="@style/txt_gray_light"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance_medium"
                        android:text="@string/dummyText"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:id="@+id/txt_date"
                        style="@style/txt_gray_light"
                        android:text="22/07/2020 11:20 AM"
                        android:layout_gravity="right"
                        android:textColor="#484848"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </LinearLayout>
<!--        </androidx.cardview.widget.CardView>-->
        <View
            style="@style/Separator_View"
            android:layout_height="0.5dp" />
    </LinearLayout>
</layout>